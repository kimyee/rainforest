<h1>New Product</h1>
<%= link_to "Home", "/products" %>

<%= form_for @product do |p| %>
	
	<div class="field">
		<%= p.label :name %><br>
		<%= p.text_field :name %>	
	</div>

	<div class="field">
		<%= p.label :description %><br>
		<%= p.text_field :description %>	
	</div>

	<div class="field">
		<%= p.label :price_in_cents %><br>
		<%= p.text_field :price_in_cents %>	
	</div>
	
	<div class="actions">
		<%= p.submit "Submit" %>
	</div>
<% end %>

